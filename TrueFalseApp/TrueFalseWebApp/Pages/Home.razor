@page "/"
@inject NavigationManager Navigation
@using MudBlazor

<MudContainer Class="d-flex align-center justify-center" Style="height: 100vh; width: 100vw;">
    <MudStack Class="align-center">
        <MudButton Variant="Variant.Filled" Class="mud-theme-primary" OnClick="StartSoloGame">
            Play Solo
        </MudButton>
        <MudButton Variant="Variant.Filled" Class="mud-theme-primary" OnClick="StartMultiplayerGame">
            Play With Friends
        </MudButton>
    </MudStack>
</MudContainer>

@code {
    private void StartSoloGame()
    {
        Navigation.NavigateTo("solo");
    }

    private void StartMultiplayerGame()
    {
        Navigation.NavigateTo("multiplayer");
    }
}