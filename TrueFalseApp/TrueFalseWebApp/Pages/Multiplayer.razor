@page "/multiplayer"
@inject IDialogService DialogService
@inject NavigationManager Navigation
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="d-flex flex-column align-center justify-center" Style="height: 100vh;">
    <MudStack Class="align-center">
        <MudButton Variant="Variant.Filled" Class="mud-theme-primary" OnClick="CreateRoom">
            create room
        </MudButton>
        <MudButton Variant="Variant.Filled" Class="mud-theme-primary" OnClick="JoinRoom">
            join with room code
        </MudButton>
    </MudStack>
    <MudIconButton Icon="@Icons.Material.Filled.Home" Title="Home" Size="Size.Large" Color="Color.Inherit"
        Style="position: absolute; bottom: 16px; left: 16px; cursor: pointer;"
        OnClick="@(() => Navigation.NavigateTo("/"))" />
</MudContainer>

@code {
    private Task CreateRoom()
    {
        // Logic to create a multiplayer room
        var options = new DialogOptions { CloseOnEscapeKey = true };
        return DialogService.ShowAsync<CreateRoomDialog>("", options);
    }

    private void JoinRoom()
    {
        // Logic to join a multiplayer room
    }

}